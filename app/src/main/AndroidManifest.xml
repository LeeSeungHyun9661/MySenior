<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mysenior" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MySenior"
        android:usesCleartextTraffic="true" >
        <activity
            android:windowSoftInputMode="adjustNothing"
            android:name=".Activity.Activity_Patient_Detail"
            android:exported="false" />
        <activity
            android:windowSoftInputMode="adjustNothing"
            android:name=".Activity.Activity_Patient_Add"
            android:theme="@android:style/Theme.Dialog"
            android:exported="false" />
        <activity
            android:windowSoftInputMode="adjustNothing"
            android:name=".Activity.Activity_Authority_Search"
            android:exported="false" />
        <activity
            android:windowSoftInputMode="adjustNothing"
            android:name=".Activity.Activity_Hospital"
            android:exported="false"
            android:label="@string/title_activity_hospital"
            android:theme="@style/Theme.MySenior.NoActionBar" />
        <activity
            android:windowSoftInputMode="adjustNothing"
            android:name=".Activity.Activity_Authority_Write"
            android:exported="false" />
        <activity
            android:windowSoftInputMode="adjustNothing"
            android:name=".Activity.Activity_Authority_List"
            android:exported="false" />
        <activity
            android:windowSoftInputMode="adjustNothing"
            android:name=".Activity.Activity_Regist"
            android:exported="false" />
        <activity
            android:windowSoftInputMode="adjustNothing"
            android:name=".Activity.Activity_Login"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>