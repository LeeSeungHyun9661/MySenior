<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:context=".Activity.Activity_Patient_Add">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@color/thema2"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:id="@+id/worker_detail_image"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:id="@+id/worker_detail_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:ems="20"
            android:hint="직원 이름"
            android:textColor="@color/thema4"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/worker_detail_category"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_gravity="left|center"/>

    </LinearLayout>

        <TextView
            android:layout_weight="1"
            android:id="@+id/worker_detail_position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:ems="20"
            android:hint="직원 직책"
            android:textColor="@color/thema4"
            android:textSize="20dp" />


        <TextView
            android:layout_weight="1"
            android:id="@+id/worker_detail_department"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:ems="20"
            android:hint="직원 소속"
            android:textColor="@color/thema4"
            android:textSize="20dp" />

        <Button
            android:layout_weight="0.5"
            android:id="@+id/worker_detail_remove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="직원 제거"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>