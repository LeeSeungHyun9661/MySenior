<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/thema2"
    android:padding="10dp">
    
    <LinearLayout
        android:id="@+id/item_authority_layout_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_authority_list_h_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/hospital_test"
            android:scaleType="centerCrop"
            android:clipToOutline="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_authority_list_h_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="세명병원"
                android:layout_marginHorizontal="5dp"
                android:singleLine="true"
                android:ellipsize="marquee"/>

            <TextView
                android:id="@+id/item_authority_list_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="간호사"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="5dp"
                android:singleLine="true"
                android:ellipsize="marquee"/>

            <TextView
                android:id="@+id/item_authority_list_department"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="3병동"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="5dp"
                android:singleLine="true"
                android:ellipsize="marquee"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>