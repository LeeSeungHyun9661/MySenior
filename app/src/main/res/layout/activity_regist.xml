<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:context=".Activity.Activity_Regist">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@color/thema2"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="REGISTER"
            android:textColor="@color/thema4"
            android:textSize="40dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/register_id_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="20"
                android:hint="ID"
                android:lines="1"
                android:inputType="text"
                android:textColor="@color/thema4"
                android:textColorHint="@color/thema3"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/register_id_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:src="@drawable/check_x" />

        </LinearLayout>
        <TextView
            android:id="@+id/register_id_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="영문과 숫자를 포함한 8자 이상"
            android:gravity="right"
            android:textSize="10dp"
            android:textColor="@color/thema1"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/register_pw_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="20"
                android:hint="PASSWORD"
                android:lines="1"
                android:inputType="textPassword"
                android:textColor="@color/thema4"
                android:textColorHint="@color/thema3"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/register_pw_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:src="@drawable/check_x" />

        </LinearLayout>

        <TextView
            android:id="@+id/register_pw_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="영문과 특수문자 숫자를 포함한 8자 이상"
            android:gravity="right"
            android:textSize="10dp"
            android:textColor="@color/thema1"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/register_pw_check_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="20"
                android:hint="PASSWORD CHECK"
                android:textColor="@color/thema4"
                android:textColorHint="@color/thema3"
                android:inputType="textPassword"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/register_pw_check_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:src="@drawable/check_x" />

        </LinearLayout>


        <EditText
            android:id="@+id/register_name_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:ems="20"
            android:hint="NAME"
            android:textColor="@color/thema4"
            android:textColorHint="@color/thema3"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/register_email_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:ems="20"
            android:hint="E-MAIL"
            android:textColor="@color/thema4"
            android:textColorHint="@color/thema3"
            android:textSize="15dp" />

        <Button
            android:id="@+id/register_registbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:background="@color/thema3"
            android:padding="10dp"
            android:text="가입하기"
            android:textColor="@color/thema4"
            android:textSize="20dp" />

    </LinearLayout>

</ScrollView>