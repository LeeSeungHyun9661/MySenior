<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@color/thema2"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="15"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="공지사항"
                    android:textSize="20dp"/>
                <Button
                    android:id="@+id/fragment_home_notification_more"
                    android:layout_weight="0.1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:textSize="10dp"
                    android:text="더보기"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/thema5"/>

            <ListView
                android:id="@+id/fragment_home_notification_Listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/fragment_home_notification_noitem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="공지사항이 없습니다!"
                android:textSize="20dp"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="주간 근무 일정"
                android:textSize="20dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/thema5"/>

            <TextView
                android:id="@+id/fragment_home_year_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:text=""
                android:textAlignment="center"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="일"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@color/thema5"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="월"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@color/thema5"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="화"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@color/thema5"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="수"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@color/thema5"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="목"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@color/thema5"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="금"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@color/thema5"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="토"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@color/thema5"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fragment_home_date_0"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@color/thema4"/>
                <TextView
                    android:id="@+id/fragment_home_date_1"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@color/thema4"/>
                <TextView
                    android:id="@+id/fragment_home_date_2"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@color/thema4"/>
                <TextView
                    android:id="@+id/fragment_home_date_3"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@color/thema4"/>
                <TextView
                    android:id="@+id/fragment_home_date_4"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@color/thema4"/>
                <TextView
                    android:id="@+id/fragment_home_date_5"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@color/thema4"/>
                <TextView
                    android:id="@+id/fragment_home_date_6"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@color/thema4"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/fragment_home_roster_0"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:background="@drawable/border_rect2"/>
                <ImageView
                    android:id="@+id/fragment_home_roster_1"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:background="@drawable/border_rect2"/>
                <ImageView
                    android:id="@+id/fragment_home_roster_2"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:background="@drawable/border_rect2"/>
                <ImageView
                    android:id="@+id/fragment_home_roster_3"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:background="@drawable/border_rect2"/>
                <ImageView
                    android:id="@+id/fragment_home_roster_4"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:background="@drawable/border_rect2"/>
                <ImageView
                    android:id="@+id/fragment_home_roster_5"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:background="@drawable/border_rect2"/>
                <ImageView
                    android:id="@+id/fragment_home_roster_6"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:background="@drawable/border_rect2"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="최근감지기록"
                android:textSize="20dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/thema5"/>
            <ListView
                android:id="@+id/fragment_home_detection_Listview"
                android:layout_width="wrap_content"
                android:layout_height="200dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="최근 환자 갱신"
                android:textSize="20sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/thema5"/>

            <ListView
                android:id="@+id/fragment_home_log_Listview"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="200sp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>