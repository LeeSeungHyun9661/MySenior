<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Activity_Login">

    <LinearLayout
        android:gravity="center"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@color/thema2">

        <ImageView
            android:layout_weight="300"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_weight="4"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Senior"
            android:textSize="70dp"
            android:gravity="center"
            android:textColor="@color/thema4"/>

        <EditText
            android:layout_weight="2"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/login_id_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="ID"
            android:textColorHint="@color/thema3"
            android:textColor="@color/thema4"
            android:ems="20"
            android:textSize="20dp"
            android:inputType="text"
            android:lines="1"
            android:padding="5dp"
            android:imeOptions="actionNext"/>

        <EditText
            android:layout_weight="2"
            android:layout_marginVertical="5dp"
            android:id="@+id/login_pw_input"
            android:layout_marginHorizontal="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="PASSWORD"
            android:textColorHint="@color/thema3"
            android:textColor="@color/thema4"
            android:ems="20"
            android:textSize="20dp"
            android:padding="5dp"
            android:inputType="textPassword"
            android:lines="1"
            android:imeOptions="actionGo"
            />

        <Button
            android:layout_weight="4"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/login_loginbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="시작하기"
            android:gravity="center"
            android:textColor="@color/thema4"
            android:background="@color/thema3"
            android:textSize="30dp"
            android:padding="10dp"/>

        <TextView
            android:layout_weight="3"
            android:id="@+id/login_regist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="회원가입"
            android:textColor="@color/thema4"
            android:textSize="20dp"/>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>