<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Activity_Login">

    <LinearLayout
        android:gravity="center"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@color/thema2">

        <ImageView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="350dp"/>

        <TextView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Sinor"
            android:textSize="80dp"
            android:gravity="center"
            android:textColor="@color/thema5"/>

        <TextView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/thema4"
            android:text="LOGIN"
            android:textSize="40dp"/>

        <EditText
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/login_id_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="ID"
            android:textColorHint="@color/thema3"
            android:textColor="@color/thema4"
            android:ems="20"
            android:textSize="30dp"
            android:background="@drawable/border"
            android:padding="5dp"/>

        <EditText
            android:layout_marginVertical="5dp"
            android:id="@+id/login_pw_input"
            android:layout_marginHorizontal="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="PASSWORD"
            android:textColorHint="@color/thema3"
            android:textColor="@color/thema4"
            android:ems="20"
            android:textSize="30dp"
            android:background="@drawable/border"
            android:padding="5dp"/>

        <Button
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/login_loginbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="시작하기"
            android:textColor="@color/thema4"
            android:background="@color/thema3"
            android:textSize="40dp"
            android:padding="10dp"/>

        <View
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/thema4"/>

        <LinearLayout
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <Button
                android:id="@+id/login_regist"
                android:layout_weight="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원가입"
                android:textColor="@color/thema4"
                android:background="@color/thema3"
                android:textSize="20dp"
                android:layout_marginRight="30dp"/>
            <RadioButton
                android:id="@+id/login_autologin"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="자동로그인"
                android:textColor="@color/thema4"
                android:background="#00FF0000"
                android:textSize="15dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>